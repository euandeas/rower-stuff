<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen 
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		app:key="appsettings_category"
		app:title="App Settings">

		<ListPreference
			app:key="theme_preference"
			app:title="App Theme"
			app:entries="@array/theme_array_entries"
			app:entryValues="@array/theme_array_entries"
			app:defaultValue="@string/theme_def_value"
			app:useSimpleSummaryProvider="true"/>

	</PreferenceCategory>

	<PreferenceCategory
	app:key="feedback_category"
	app:title="Feedback">

		<Preference
			app:key="mail_preference"
            android:title="Send Feedback"
            android:summary="via email">
		</Preference>

	</PreferenceCategory>

	<PreferenceCategory
		app:key="about_category"
		app:title="About">

		<Preference app:title="Developer Site" >
			<intent android:action="android.intent.action.VIEW"
					android:data="https://euandeas.com" />
		</Preference>

		<Preference app:title="Privacy Policy" >
			<intent android:action="android.intent.action.VIEW"
					android:data="https://euandeas.com/privacy" />
		</Preference>

		<Preference
		  app:key="version"
		  app:title="App Version"
		  app:summary="@string/app_version"/>

	</PreferenceCategory>

</PreferenceScreen>
