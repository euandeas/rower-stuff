<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/distanceCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:text="Distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distanceLabel"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:textStyle="italic"
                        android:textSize="25sp"/>
                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/distanceLabel"
                        android:id="@+id/enteredDistance"
                        android:inputType="number"
                        android:textSize="22sp"
                        android:maxLength="8"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0.0dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:text="M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/distanceLabel"
                        android:layout_toRightOf="@id/enteredDistance"
                        android:id="@+id/meterSymbol"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textStyle="italic"
                        android:textSize="25sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/splitCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:text="500 M Split"
                        android:layout_width="238.0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/splitLabel"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:textStyle="italic"
                        android:textSize="25sp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/splitLabel"
                        android:id="@+id/enteredSplitMin"
                        android:inputType="number"
                        android:textSize="22sp"
                        android:maxLength="2"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0.0dp"
                        android:hint="00" />
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/splitLabel"
                        android:layout_toRightOf="@id/enteredSplitMin"
                        android:id="@+id/colon1"
                        android:paddingTop="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp" />
                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/splitLabel"
                        android:layout_toRightOf="@id/colon1"
                        android:id="@+id/enteredSplitSec"
                        android:inputType="numberDecimal"
                        android:textSize="22sp"
                        android:maxLength="6"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0.0dp"
                        android:hint="00.00"/>
                    <TextView
                        android:text="Mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/splitLabel"
                        android:layout_toRightOf="@id/enteredSplitSec"
                        android:id="@+id/minsSymbol"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textStyle="italic"
                        android:textSize="25sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/timeCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:text="Total Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/timeLabel"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:textStyle="italic"
                        android:textSize="25sp" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timeLabel"
                        android:id="@+id/enteredTimeMin"
                        android:inputType="number"
                        android:textSize="22sp"
                        android:maxLength="5"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0.0dp"
                        android:hint="00"/>
                    <TextView
                        android:text=":"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timeLabel"
                        android:layout_toRightOf="@id/enteredTimeMin"
                        android:id="@+id/colon2"
                        android:paddingTop="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp" />
                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timeLabel"
                        android:layout_toRightOf="@id/colon2"
                        android:id="@+id/enteredTimeSec"
                        android:inputType="numberDecimal"
                        android:textSize="22sp"
                        android:maxLength="6"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0.0dp"
                        android:hint="00.00" />
                    <TextView
                        android:text="Mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/timeLabel"
                        android:layout_toRightOf="@id/enteredTimeSec"
                        android:id="@+id/minsSymbol2"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textStyle="italic"
                        android:textSize="25sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:text="Calculate"
                android:layout_width="fill_parent"
                android:layout_height="55.0dp"
                android:id="@+id/calculateButton"/>
        </LinearLayout>
    </ScrollView>
    
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

