<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_marginBottom="@dimen/mp_small"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/card_body_weight"
                android:layout_marginBottom="@dimen/mp_small"
                android:layout_marginLeft="@dimen/mp_small"
                android:layout_marginRight="@dimen/mp_small"/>

             <com.google.android.material.card.MaterialCardView
                android:id="@+id/timeDistanceCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                cardview:cardElevation="4dp"
                android:layout_marginBottom="@dimen/mp_small"
                android:layout_marginLeft="@dimen/mp_small"
                android:layout_marginRight="@dimen/mp_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mp_large"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mp_small"
                        android:id="@+id/timeLabel"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_time"
                        android:layout_marginBottom="@dimen/mp_small"/>
                    <TextView
                        android:text="@string/or_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mp_small"
                        android:layout_gravity="center_horizontal"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
                    <TextView
                        android:text="@string/distance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mp_small"
                        android:id="@+id/distanceLabel"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_distance"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adjustedResultCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                cardview:cardElevation="4dp"
                android:layout_marginBottom="@dimen/mp_small"
                android:layout_marginLeft="@dimen/mp_small"
                android:layout_marginRight="@dimen/mp_small">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mp_large"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/adjusted_result_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mp_small"
                        android:id="@+id/adjustedResultLabel"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
                    <TextView
                        android:id="@+id/adjustedResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceTitleLarge"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/button_calculate"
                android:layout_marginLeft="@dimen/mp_small"
                android:layout_marginRight="@dimen/mp_small"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>