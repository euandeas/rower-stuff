<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_marginBottom="@dimen/mp_small"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/card_watts"
        android:layout_marginBottom="@dimen/mp_small"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small"/>

        <com.google.android.material.card.MaterialCardView
        android:id="@+id/percentageCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        cardview:cardElevation="4dp"
        android:layout_marginBottom="@dimen/mp_small"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mp_large"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mp_small"
                android:id="@+id/percentageLabel"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/percentageWattsCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        cardview:cardElevation="4dp"
        android:layout_marginBottom="@dimen/mp_small"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mp_large"
            android:orientation="vertical">
            <TextView
                android:text="@string/percentage_watts_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mp_small"
                android:id="@+id/percentageWattsLabel"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
            <TextView
                android:id="@+id/percentageWattsResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceTitleLarge"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/button_calculate"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small"/>
</LinearLayout>