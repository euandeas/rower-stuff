<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView">
	    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        cardview:cardElevation="4dp"
		        cardview:cardCornerRadius="5dp"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp">
		        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:padding="8dp">
			        <TextView
				        android:text="Body Weight"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/bodyweightLabel"
				        android:paddingLeft="10dp"
				        android:paddingRight="10dp"
				        android:paddingBottom="5dp"
				        android:textStyle="italic"
				        android:textSize="25sp" />
			        <EditText
				        android:layout_width="150dp"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/bodyweightLabel"
				        android:id="@+id/enteredWeight"
				        android:inputType="numberDecimal"
				        android:textSize="22sp"
				        android:maxLength="10"
				        android:paddingRight="10dp"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:layout_marginLeft="10dp"
				        android:layout_marginRight="0.0dp"
				        android:textAlignment="center" />
			        <Spinner
				        android:id="@+id/weightUnit"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" 
			            android:layout_below="@id/bodyweightLabel"
				        android:layout_toRightOf="@id/enteredWeight"/>
		        </RelativeLayout>
	        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        cardview:cardElevation="4dp"
		        cardview:cardCornerRadius="5dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp">
		        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:padding="8dp">
			        <TextView
				        android:text="Total Time"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/timeLabel"
				        android:paddingLeft="10dp"
				        android:paddingRight="10dp"
				        android:paddingBottom="5dp"
				        android:textStyle="italic"
				        android:textSize="25sp" />
			        <EditText
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/timeLabel"
				        android:id="@+id/enteredTimeMin"
				        android:inputType="number"
				        android:textSize="22sp"
				        android:maxLength="5"
				        android:paddingRight="10dp"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:layout_marginLeft="10dp"
				        android:layout_marginRight="0.0dp"
				        android:hint="00" />
			        <TextView
				        android:text=":"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/timeLabel"
				        android:layout_toRightOf="@id/enteredTimeMin"
				        android:id="@+id/colon2"
				        android:paddingTop="1dp"
				        android:paddingLeft="5dp"
				        android:paddingRight="5dp"
				        android:paddingBottom="5dp"
				        android:textSize="25sp" />
			        <EditText
				        android:layout_width="90dp"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/timeLabel"
				        android:layout_toRightOf="@id/colon2"
				        android:id="@+id/enteredTimeSec"
				        android:inputType="numberDecimal"
				        android:textSize="22sp"
				        android:maxLength="6"
				        android:paddingRight="10dp"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:layout_marginLeft="0dp"
				        android:layout_marginRight="0.0dp"
				        android:hint="00.00" />
			        <TextView
				        android:text="Mins"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/timeLabel"
				        android:layout_toRightOf="@id/enteredTimeSec"
				        android:id="@+id/minsSymbol2"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:paddingRight="20dp"
				        android:paddingBottom="5dp"
				        android:textStyle="italic"
				        android:textSize="25sp" />
			        <TextView
				        android:text="OR"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:paddingTop="5dp"
				        android:layout_below="@id/enteredTimeSec"
				        android:id="@+id/orText"
				        android:textAlignment="center"/>
			        <TextView
				        android:text="Distance"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/orText"
				        android:id="@+id/distanceLabel"
				        android:paddingLeft="10dp"
				        android:paddingRight="10dp"
				        android:paddingBottom="5dp"
				        android:textStyle="italic"
				        android:textSize="25sp" />
			        <EditText
				        android:layout_width="150dp"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/distanceLabel"
				        android:id="@+id/enteredDistance"
				        android:inputType="number"
				        android:textSize="22sp"
				        android:maxLength="10"
				        android:paddingRight="10dp"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:layout_marginLeft="10dp"
				        android:layout_marginRight="0.0dp" 
                        android:textAlignment="center"/>
			        <TextView
				        android:text="M"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/distanceLabel"
				        android:layout_toRightOf="@id/enteredDistance"
				        android:id="@+id/meterSymbol"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:paddingRight="20dp"
				        android:paddingBottom="5dp"
				        android:textStyle="italic"
				        android:textSize="25sp" />
		        </RelativeLayout>
	        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView
                android:id="@+id/adjustedCard"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        cardview:cardElevation="4dp"
		        cardview:cardCornerRadius="5dp"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp">
		        <RelativeLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:padding="8dp">
			        <TextView
				        android:text="Adjusted ..."
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/adjustedLabel"
				        android:paddingLeft="10dp"
				        android:paddingRight="10dp"
				        android:paddingBottom="5dp"
				        android:textStyle="italic"
				        android:textSize="25sp" />
			        <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/adjustedLabel"
				        android:id="@+id/adjustedAnswer"
				        android:paddingTop="5dp"
				        android:paddingLeft="10dp"
				        android:paddingRight="20dp"
				        android:paddingBottom="5dp"
				        android:textSize="22sp" />	
		        </RelativeLayout>
	        </android.support.v7.widget.CardView>
	
	        <Button
		        android:text="Calculate"
		        android:layout_width="fill_parent"
		        android:layout_height="55.0dp"
		        android:id="@+id/calculateButton"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
