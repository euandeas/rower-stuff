<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enteredMin"
        android:inputType="number"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:maxLength="2"
        android:paddingTop="0dp"
        android:hint="@string/min_hint"
        android:layout_weight="1"/>
    <TextView
        android:text="@string/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_weight="0"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enteredSec"
        android:inputType="numberDecimal"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:maxLength="6"
        android:paddingTop="0dp"
        android:hint="@string/sec_hint"
        android:layout_weight="2"/>
    <TextView
        android:text="@string/minute_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mp_medium"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_weight="0"/>
</LinearLayout>