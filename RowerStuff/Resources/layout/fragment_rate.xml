<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_marginBottom="@dimen/mp_small"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardElevation="4dp"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small"
        android:layout_marginBottom="@dimen/mp_small">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mp_large"
            android:orientation="vertical">
            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mp_small"
                android:layout_gravity="center_horizontal"
                android:id="@+id/rateLabel"
                android:textAppearance="?attr/textAppearanceDisplayMedium"/>
            <TextView
                android:text="SPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/spmSymbol"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="@string/tap_label"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tapButton"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_marginLeft="@dimen/mp_small"
        android:layout_marginRight="@dimen/mp_small"
        android:layout_marginBottom="@dimen/mp_small"
        app:cornerRadius="12dp"/>
</LinearLayout>